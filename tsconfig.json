{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "demo/dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "downlevelIteration": true
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx", "lib/**/*.js"],
  "exclude": ["node_modules", "demo", "dist", "**/*.test.*", "**/*.config.*"]
}
